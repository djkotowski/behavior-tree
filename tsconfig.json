{
  "compilerOptions": {
    "declaration": true,
    "outDir": "lib",
    "declarationMap": true,
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*.ts"]
}
